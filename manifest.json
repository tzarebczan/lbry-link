{
  "name": "LBRY Link",
  "content_security_policy": "default-src 'none'; script-src 'self'",
  "permissions": [ 
      "management",
      "<all_urls>"
  ],
  "version": "0.0.5",
  "description": "Finds LBRY URLs on a page and adds a link tag that opens the LBRY desktop app",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
      "persistent": false,
      "scripts": ["omni.js"]
  },
}
